<div class="data-form">
  <form action="/users/create" method="POST">
    <h2>Create a new user:</h2>
    <label for="inputName">Name</label>
    <input
      type="text"
      name="name"
      id="inputName"
      placeholder="Name"
      required
      autofocus
    />
    <br>
    <label for="inputEmail">Email address</label>
    <input
      type="email"
      name="email"
      id="inputEmail"
      placeholder="Email address"
      required
    />
    <br>
    <label for="inputPassword">Password</label>
    <input
      type="password"
      name="password"
      id="inputPassword"
      placeholder="Password"
      required
    />
    <br>
    <label for="inputRole">Role</label>
    <input
      type="text"
      name="role"
      id="inputRole"
      placeholder="Student or Alumni"
    />
    <br>
    <label for="inputGraduationYear">Graduation Year</label>
    <input
      type="number"
      name="graduationYear"
      id="inputGraduationYear"
      placeholder="Graduation Year"
      required
    />
    <br>
    <label for="inputMajor">Major</label>
    <input
      type="text"
      name="major"
      id="inputMajor"
      placeholder="Major"
      required
    />
    <br>
    <label for="inputJob">Job</label>
    <input
      type="text"
      name="job"
      id="inputJob"
      placeholder="Job"
    />
    <br>
    <label for="inputCompany">Company</label>
    <input
      type="text"
      name="company"
      id="inputCompany"
      placeholder="Company"
    />
    <br>
    <label for="inputCity">City</label>
    <input
      type="text"
      name="city"
      id="inputCity"
      placeholder="City"
    />
    <br>
    <label for="inputState">State</label>
    <input
      type="text"
      name="state"
      id="inputState"
      placeholder="State"
    />
    <br>
    <label for="inputCountry">Country</label>
    <input
      type="text"
      name="country"
      id="inputCountry"
      placeholder="Country"
    />
    <br>
    <label for="inputZipCode">Zip Code</label>
    <input
      type="number"
      name="zipCode"
      id="inputZipCode"
      placeholder="Zip Code"
      pattern="[0-9]{5}"
    />
    <br>
    <label for="inputBio">Bio</label>
    <input
      type="text"
      name="bio"
      id="inputBio"
      placeholder="Bio"
    />
    <br>
    <label for="inputInterests">Interests</label>
    <input
      type="text"
      name="interests"
      id="inputInterests"
      placeholder="Interests"
    />
    <br><br>
    <button type="submit">Create User</button>
    <br><br><br><br>
  </form>
</div>
