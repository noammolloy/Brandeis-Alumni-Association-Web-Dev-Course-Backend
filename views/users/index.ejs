<h2>Users Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Major</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
    <tr>
      <td>
        <a href="<%= `/users/${user._id}` %>"> <%= user.name %> </a>
      </td>
      <td><%= user.email %></td>
      <td><%= user.major %></td>
      <td>
        <a href="<%=`/users/${user._id}/edit` %>" class="btn btn-primary">Edit</a>
      </td>
      <td>
        <a
          href="<%= `users/${user._id}/delete?_method=DELETE` %>"
          onclick="return confirm('Are you sure you want to delete this record?')"
          class="btn btn-primary"
          >Delete</a
        >
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
