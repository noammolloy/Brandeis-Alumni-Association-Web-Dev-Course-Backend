<h2>Jobs Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Company</th>
      <th>Description</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <% jobs.forEach(job => { %>
    <tr>
      <td>
        <a href="<%= `/jobs/${job._id}` %>"> <%= job.title %> </a>
      </td>
      <td><%= job.company %></td>
      <td><%= job.description %></td>
      <td><%= job.location %></td>
      <% if (currentUser && (currentUser._id.equals(job.lister) || currentUser.isAdmin)) { %>
      <td>
        <a href="<%=`/jobs/${job._id}/edit` %>" class="btn btn-primary"> Edit </a>
      </td>
      <% } %>
      <% if (currentUser && currentUser.isAdmin) { %>
      <td>
        <a
          href="<%= `jobs/${job._id}/delete?_method=DELETE` %>"
          onclick="return confirm('Are you sure you want to delete this record?')"
          class="btn btn-primary"
          >Delete</a
        >
      </td>
      <% } %>
    </tr>
    <% }); %>
  </tbody>
</table>

<a href="/jobs/new" class="btn btn-primary">Create a new job listing</a>